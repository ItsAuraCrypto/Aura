[MASTER]
# Specify the Python version to check
python-version=3.8

# Configuration for which files to check
ignore=tests,venv

[MESSAGES CONTROL]
# Disable specific warnings
disable=
    missing-docstring,      # Missing docstring in modules and classes
    invalid-name,           # Invalid naming of variables and constants
    too-few-public-methods, # Too few public methods in classes
    too-many-instance-attributes, # Too many attributes in classes
    too-many-arguments,     # Too many arguments in methods
    line-too-long,          # Lines that are too long
    fixme,                  # FIXME comments without implementation
    trailing-whitespace,    # Trailing whitespace at the end of lines
    broad-except            # Broad except usage without specifying the error type
